		<explosionColorEdge>(0.6, 0.55, 0.9)</explosionColorEdge>
		<soundExplosion>MeleeHit_Metal_ThunderHammer</soundExplosion>
		<combatLogRules>Damage_Bomb</combatLogRules>
	</DamageDef>

