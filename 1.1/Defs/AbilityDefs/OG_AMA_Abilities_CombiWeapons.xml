<!-- ======================== Imperial - Combi Flamer Ability ================================== -->
	<AdeptusMechanicus.EquipmentAbilityDef>
        <defName>OGI_Ability_FireFlamer</defName>
        <label>Fire Flamer</label>
        <iconPath>Things/Projectile/FlamerFire/FireA</iconPath>
        <description>Fire built in Flamer.</description>
        <abilityClass>EquipmentAbility</abilityClass>
		<cooldown>30</cooldown>
		<verbProperties Class="AdeptusMechanicus.VerbProperties_EquipmentAbility">
            <verbClass>AdeptusMechanicus.Verb_ShootEquipment</verbClass>
            <Multishot>true</Multishot>
			<ScattershotCount>1</ScattershotCount>
            <hasStandardCommand>true</hasStandardCommand>
			<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
			<defaultProjectile>OGI_Bullet_Flamer</defaultProjectile>
            <warmupTime>0.6</warmupTime>
            <burstShotCount>18</burstShotCount>
            <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
			<range>12</range>
			<soundCast>OG_Flamer_Sound</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>4</muzzleFlashScale>
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
        </verbProperties>
		<comps>
		  <li Class="CompProperties_EffectWithDest">
			<compClass>CompAbilityEffect_Shoot</compClass>
			<psychic>false</psychic>
			<goodwillImpact>0</goodwillImpact>
			<screenShakeIntensity>0</screenShakeIntensity>
			<clamorRadius>0</clamorRadius>
		  </li>
		</comps>
	</AdeptusMechanicus.EquipmentAbilityDef>
 
