	<!--==================== Necron - Gauss Base =========================-->
	<ThingDef ParentName="OG_Bullet_LaserGeneric" Class="AdeptusMechanicus.Lasers.LaserBeamDef" Name="OGN_Bullet_LaserGauss" Abstract="True">
		<label>guass blast</label>
		<graphicData>
			<shaderType>MoteGlow</shaderType>
			<color>(57,205,155,75)</color>	
			<colorTwo>(57,205,155,75)</colorTwo>	
		</graphicData>
		<textures>
			<li>Things/Projectile/GaussBoltSml</li>
		</textures>
		<!--flareMatPath>Other/LaserFlareHeavy</flareMatPath-->
		<!--flareMatPath>Other/BeamGlow</flareMatPath-->
		<!--flareMatPath>Other/BeamGlowB</flareMatPath-->
		<seam>0</seam>
		<lifetime>20</lifetime>	<!-- this is how many ticks the beam should be drawn for -->
		<impulse>0.5</impulse>	<!-- the solidity of the beam -->
		<beamWidth>0.5</beamWidth>	<!-- the width of the laser beam - i suggest 0.5 for normal lasers and 0.125 for lightning -->
		
		<LightningBeam>true</LightningBeam>	<!-- use lightning bolt mesh if true -->
		<StaticLightning>true</StaticLightning>	<!-- use single mesh per arc if true -->
		<LightningVariance>0.5</LightningVariance>	<!-- how varied the path of a lightning bolt will be -->
		<ArcCount>3</ArcCount>	<!-- number of lightning bolts drawn per shot -->
		<lightningArcWidthDistCurve>
			<points>
				<li>(0, 0.25)</li>
				<li>(0.1, 0.50)</li>
				<li>(0.9, 0.50)</li>
				<li>(1, 0.25)</li>
			</points>
		</lightningArcWidthDistCurve>
		<lightningArcWidthTimeCurve>
			<points>
				<li>(0, 0.25)</li>
				<li>(0.5, 0.5)</li>
				<li>(1, 0.5)</li>
			</points>
		</lightningArcWidthTimeCurve>
		<lightningArcVarianceDistCurve>
			<points>
				<li>(0, 0.0)</li>
				<li>(0.1, 0.25)</li>
				<li>(0.9, 0.25)</li>
				<li>(1, 0.0)</li>
			</points>
		</lightningArcVarianceDistCurve>
		<lightningArcVarianceTimeCurve>
			<points>
				<li>(0, 0)</li>
				<li>(0.5, 0.5)</li>
				<li>(1, 1)</li>
			</points>
		</lightningArcVarianceTimeCurve>
	</ThingDef>

