			</recipeUsers>
		</recipeMaker>
		<costStuffCount>200</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costList>
			<Plasteel>10</Plasteel>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Gold>2</Gold>
		</costList>
