  <!-- ========================= Imperial Guard - Undershirt ========================== -->
  <ThingDef ParentName="OG_Imperial_Apparel">
    <defName>OGIG_Apparel_UniformShirt</defName>
    <label>imperial undershirt</label>
    <description>A uniform shirt worn by the soldiers of the IG.</description>
    <graphicData>
      <texPath>Things/Item/Apparel/Imperial/IG/IG_Tunic/IG_Tunic_Icon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <MarketValue>100</MarketValue>
      <Mass>0.25</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.22</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<generateCommonality>1</generateCommonality>
    <apparel>
	
	<useWornGraphicMask>true</useWornGraphicMask>
	
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/Imperial/IG/IG_Tunic/IG_Tunic</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
      <li>OGIGClothing</li>
      <li>OGIGUniform</li>
      </tags>
      <defaultOutfitTags>
      <li>Any</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
    </comps>
  </ThingDef>

  <!-- ========================= Imperial Guard - Field Cap ========================== -->
  <ThingDef ParentName="OG_Imperial_Apparel_Headgear" Name="FieldHat">
    <defName>OGIG_Apparel_FieldCap</defName>
    <label>field cap</label>
    <description>A hat worn by Imperial officers.</description>
    <graphicData>
      <texPath>Things/Item/Apparel/Imperial/IG/IG_Fieldcap/IG_FieldCap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <MarketValue>300</MarketValue>
			<WorkToMake>1800</WorkToMake>
			<Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.21</StuffEffectMultiplierArmor>
