			<Bulk MayRequire="CETeam.CombatExtended">3.4</Bulk>
			<MeleeCounterParryBonus MayRequire="CETeam.CombatExtended">0.25</MeleeCounterParryBonus>
		</statBases>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<stuffCategories>
		  <li>Metallic</li>
		</stuffCategories>
		<tools>
		  <li>
			<label>handle</label>
			<capacities>
			  <li>Blunt</li>
			</capacities>
			<power>9</power>
			<cooldownTime>2</cooldownTime>
		  </li>
		  <li>
			<label>point</label>
			<capacities>
			  <li>Stab</li>
