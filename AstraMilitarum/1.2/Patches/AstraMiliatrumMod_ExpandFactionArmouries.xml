						<value>
							<li>ChaosMelee</li>
						</value>
				</match>	
			</li>		
			<li Class="PatchOperationConditional">
				<xpath>/Defs/PawnKindDef[@Name = "IG_CM_Leader"]/weaponTags</xpath>
				<match Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[@Name = "IG_CM_Leader"]/weaponTags</xpath>
						<value>
							<li>Chaos_HeavyGun</li>
						</value>
