<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Defs\Bodies\Bodies_Humanlike.xml -->
	<!-- Human Humanoid Alien Races 2.0 -->
	<Operation Class="PatchOperationSequence">
		<operations>	
			<!-- Traitor Guard Armoury Expansion -->
			<li Class="PatchOperationConditional">
				<xpath>/Defs/PawnKindDef[@Name = "TGSolider"]/weaponTags</xpath>
				<match Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[@Name = "TGSolider"]/weaponTags</xpath>
						<value>
							<li>Chaos_Gun</li>
						</value>
				</match>	
			</li>
			<li Class="PatchOperationConditional">
				<xpath>/Defs/PawnKindDef[@Name = "TGHeavySoldier"]/weaponTags</xpath>
