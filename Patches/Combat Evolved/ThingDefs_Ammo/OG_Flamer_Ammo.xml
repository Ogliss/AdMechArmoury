      <armorPenetrationBase>0.3</armorPenetrationBase>
	  <flyOverhead>false</flyOverhead>
	  <explosionRadius>0.5</explosionRadius>
	  <postExplosionSpawnThingDef>FilthPrometheum</postExplosionSpawnThingDef>
