<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
  <success>Always</success>
  <operations>
    <li Class="PatchOperationTest">
      <xpath>Defs/ResearchTabDef[defName="CE_Turrets"]</xpath>
    </li>
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs</xpath>
		<value>	
		
    <ThingCategoryDef>
      <defName>AmmoOGIFlamer</defName>
      <label>Flamethrower</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_OGIFlamer</defName>
    <label>Flamethrower ammo</label>
    <ammoTypes>
      <Ammo_OGIFlamer>Bullet_OGIFlamer</Ammo_OGIFlamer>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="OGIFlamerBase" ParentName="AmmoBase" Abstract="True">
    <description>Flamethrower</description>
    <statBases>
	  <Mass>0.02</Mass>
	  <Bulk>0.05</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoOGIFlamer</li>
    </thingCategories>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGIFlamerBase">
    <defName>Ammo_OGIFlamer</defName>
    <label>Flamethrower cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/FuelCell/Incendiary</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>ThermobaricFuel</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="BaseOGIFlamer" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/FlamerShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>PrometheumFlame</damageDef>
      <speed>20</speed>
    </projectile>
  </ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseOGIFlamer">
    <defName>Bullet_OGIFlamer</defName>
    <label>Flamethrower</label>
<projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>3</damageAmountBase>
      <armorPenetrationBaseBase>0.3</armorPenetrationBaseBase>
	  <flyOverhead>false</flyOverhead>
	  <explosionRadius>1.00</explosionRadius>
	  <postExplosionSpawnThingDef>FilthFuel</postExplosionSpawnThingDef>
	  <preExplosionSpawnChance>0.5</preExplosionSpawnChance>
	  <soundExplode>OGIFL_Explosion</soundExplode>
    </projectile>
  </ThingDef>
	
  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_OGIFlamer</defName>
    <label>make OGIFlamer x50</label>
    <description>Craft 50 Flamer cartridges.</description>
    <jobString>Making Flamer cartridges.</jobString>
    <workAmount>15000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>22</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>FSX</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_OGIFlamer>5</Ammo_OGIFlamer>
    </products>
  </RecipeDef>
	
		</value>
	</li>
  </operations>
</Operation>

</Patch>