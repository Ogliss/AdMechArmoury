<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Different physical description roots for different kinds of artworks. 
		Added to artworks with tales and taleless art.-->

<RulePackDef>
	<defName>OG_ArtDescription_Sculpture</defName>
	<rulePack>
		<rulesStrings>
		<li>physical_description_root->This [sculpture] [depicts] [image]. [desc_sentence_group]</li>
		<li>physical_description_root->This [sculpture] bears a [depiction] of [image]. [desc_sentence_group]</li>
		<li>physical_description_root->On this [sculpture] is a [depiction] of [image]. [desc_sentence_group]</li>
		<li>sculpture->sculpture</li>
		<li>sculpture->work</li>
		<li>sculpture->piece</li>
		<li>sculpture->carving</li>
		</rulesStrings>
	</rulePack>
</RulePackDef>

