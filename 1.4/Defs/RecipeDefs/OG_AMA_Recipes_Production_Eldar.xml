<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Make_OGE_Component</defName>
    <label>make eldar component</label>
    <description>Make an eldar component.</description>
    <jobString>Making eldar component.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>5000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OGE_Wraithbone</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OGE_Wraithbone</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OGE_Component>1</OGE_Component>
    </products>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
    <workSkill>Crafting</workSkill>
	<recipeUsers>
		<li>OGE_TableMachining</li>
	</recipeUsers>
	<researchPrerequisites>
		<li>AdvancedFabrication</li>
	</researchPrerequisites>
  </RecipeDef>

