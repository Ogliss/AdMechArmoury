	<AdeptusMechanicus.BackstoryDef ParentName="Imperial_Base_Adult_Backstory">
		<defName>OG_Imperial_Mechanicus_Vat_Grown</defName>
		<title>VatGrown</title>
		<titleShort>VatGrown</titleShort>
		<baseDesc>[PAWN_pronoun] is a vatgrown being, basically a heap of cells cultivated to perform a certain task.</baseDesc>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<slot>Childhood</slot>
		<workDisables>
			<li>Caring</li>
			<li>Social</li>
		</workDisables>
		<spawnCategories>
			<li>Imperium_Servitor</li>	
			<li>Mechanicus_Servitor</li>	
			<li>Mechanicus_Skitarius</li>	
		</spawnCategories>
	</AdeptusMechanicus.BackstoryDef>

