					<li>OG_Common_Tech_Weapons_Laser</li>
				</researchPrerequisites>
		</recipeMaker>
		<costList>
			<Steel>75</Steel>
			<Plasteel>30</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
		<techLevel>Spacer</techLevel>
