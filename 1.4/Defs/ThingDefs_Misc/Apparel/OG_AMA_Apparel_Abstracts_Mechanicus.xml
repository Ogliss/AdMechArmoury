<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ========================= Mechanicus ========================== -->
    <!-- ========================= Mechanicus - Clothes Base - Apparel Base ========================== -->
	<ThingDef Name="OG_Mechanicus_Apparel_Base" ParentName="OG_Apparel_Base" Abstract="True">
		<apparel>
			<ideoDesireAllowedFactionCategoryTags IgnoreIfNoMatchingField="True">
				<li>OG_Outlander_Militarum</li>
				<li>OG_Outlander_Militarum_Cadian</li>
				<li>OG_Outlander_Militarum_Kreig</li>
				<li>OG_Outlander_Mechanicus</li>
			</ideoDesireAllowedFactionCategoryTags>
			<tags>
				<li>MechanicusApparel</li>
			</tags>
		</apparel>
		<thingCategories>
			<li>OGAMSub</li>
		</thingCategories>
	</ThingDef>
	
    <!-- ========================= Mechanicus - Clothes Base - Apparel Makable Base ========================== -->
	<ThingDef Name="OG_Mechanicus_Apparel_Makeable" ParentName="OG_Mechanicus_Apparel_Base" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<researchPrerequisites>
				<li>OG_Imperial_Tech_Apparel</li>
				<li>OG_Mechanicus_Tech_Base_T1</li>
			</researchPrerequisites>
		</recipeMaker>
	</ThingDef>
		
