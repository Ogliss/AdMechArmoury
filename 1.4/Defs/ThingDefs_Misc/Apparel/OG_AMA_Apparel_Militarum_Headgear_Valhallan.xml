	<!-- ========================= Valhallan - Ushanka ========================== -->
	<ThingDef ParentName="OG_Imperial_Apparel_Headgear" Name="ValhallanHat">
		<defName>OGIG_Apparel_ValhallanUshanhka</defName>
		<label>ushanka</label>
		<description>A fur cap with ear flaps found in many cold regions.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Imperial/IG/Valhallan/Valhallan_Ushanka</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<!--color>(228,198,123)</color-->
		</graphicData>
		<recipeMaker>
			<researchPrerequisites>
				<li>OG_Militarum_Tech_Base_T1</li>
			</researchPrerequisites>
		</recipeMaker>
		<costStuffCount>35</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>0.14</Mass>
			<Insulation_Heat>-5</Insulation_Heat>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.50</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>-0.5</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>0.1</SocialImpact>
		</equippedStatOffsets>
		<apparel>
		<useWornGraphicMask>true</useWornGraphicMask>
			<wornGraphicPath>Things/Item/Apparel/Imperial/IG/Valhallan/Valhallan_Ushanka</wornGraphicPath>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Valhallan</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
			<li>
				<weight>10</weight>
				<only>228,198,123</only>
			</li>
			</options>
		</colorGenerator>
		<comps>
		</comps>
	</ThingDef>

