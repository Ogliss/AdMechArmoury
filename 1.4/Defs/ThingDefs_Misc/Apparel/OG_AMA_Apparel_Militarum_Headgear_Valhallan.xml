	<!-- ========================= Valhallan - Snow Goggles ========================== -->
	<ThingDef ParentName="OG_Imperial_Apparel_Headgear">
		<defName>OGIG_Apparel_ValhallanSnowGoggles</defName>
		<label>snow goggles</label>
		<description>A long strip of cloth that is wrapped over the eyes to block vision.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Imperial/IG/Valhallan/SnowGoggles/_Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(0.8, 0.8)</drawSize>
		</graphicData>
		<costStuffCount>20</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToMake>1200</WorkToMake>
			<Mass>0.07</Mass>
			<StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>0.8</EquipDelay>
		</statBases>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<forceRenderUnderHair>true</forceRenderUnderHair>
			<hatRenderedFrontOfFace>false</hatRenderedFrontOfFace>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Eyes</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Item/Apparel/Imperial/IG/Valhallan/SnowGoggles/Base</wornGraphicPath>
			<layers>
				<li>EyeCover</li>
			</layers>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>
		<comps>
			<!--li Class="CompProperties_CauseHediff_Apparel">
				<hediff>Blindfold</hediff>
				<part>Head</part>
			</li-->
		</comps>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

