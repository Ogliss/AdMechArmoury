			<texPath>Things/Item/Apparel/Imperial/Common/PowerArmour/_Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<maskKey>_</maskKey>
		</graphicData>
		<apparel>
			<tags>
				<li>ImperialPowerArmour</li>
				<li>ImperialArmour</li>
			</tags>
		</apparel>
		<comps>
			<li Class="AdeptusMechanicus.CompProperties_PauldronDrawer">
