<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindModID">
		<mods>
			<li>QX.AstraMilitarum</li>
			<li>Archaon.Primarch</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Handle Ceramite patching -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="Ceramite"]</xpath>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="Ceramite"]/statBases</xpath>
								<value>
									<Bulk>0.05</Bulk>
								</value>
							</li>

							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="Ceramite"]/stuffProps/categories</xpath>
								<value>
									<li>Metallic_Weapon</li>
									<li>Steeled</li>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Ceramite"]/statBases/StuffPower_Armor_Sharp</xpath>
								<value>
									<StuffPower_Armor_Sharp>1.2</StuffPower_Armor_Sharp>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Ceramite"]/statBases/StuffPower_Armor_Blunt</xpath>
								<value>
									<StuffPower_Armor_Blunt>1.8</StuffPower_Armor_Blunt>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Ceramite"]/statBases/StuffPower_Armor_Heat</xpath>
								<value>
									<StuffPower_Armor_Heat>0.0</StuffPower_Armor_Heat>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Ceramite"]/stuffProps/statFactors/MeleeWeapon_CooldownMultiplier</xpath>
								<value>
									<MeleeWeapon_CooldownMultiplier>1.22</MeleeWeapon_CooldownMultiplier>
								</value>
							</li>

							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="Ceramite"]/stuffProps/statFactors</xpath>
								<value>
									<Mass>2.45</Mass>
									<MeleePenetrationFactor>1.4</MeleePenetrationFactor>
								</value>
							</li>

						</operations>
					</match>
				</li>
				<!-- Handle Adamantium patching -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="Adamantium"]</xpath>
					<match Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="Adamantium"]/statBases</xpath>
								<value>
									<Bulk>0.04</Bulk>
								</value>
							</li>

							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="Adamantium"]/stuffProps/categories</xpath>
								<value>
									<li>Metallic_Weapon</li>
									<li>Steeled</li>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Adamantium"]/statBases/StuffPower_Armor_Sharp</xpath>
								<value>
									<StuffPower_Armor_Sharp>2</StuffPower_Armor_Sharp>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Adamantium"]/statBases/StuffPower_Armor_Blunt</xpath>
								<value>
									<StuffPower_Armor_Blunt>3</StuffPower_Armor_Blunt>
								</value>
							</li>

							<li Class="PatchOperationReplace">
								<xpath>Defs/ThingDef[defName="Adamantium"]/statBases/StuffPower_Armor_Heat</xpath>
								<value>
									<StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
								</value>
							</li>

							<li Class="PatchOperationAdd">
								<xpath>Defs/ThingDef[defName="Adamantium"]/stuffProps/statFactors</xpath>
								<value>
									<Mass>0.8</Mass>
									<MeleePenetrationFactor>1.5</MeleePenetrationFactor>
								</value>
							</li>

							<li Class="PatchOperationRemove">
								<xpath>Defs/ThingDef[defName="Adamantium"]/statBases/SharpDamageMultiplier</xpath>
							</li>
						</operations>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
	 
</Patch>
