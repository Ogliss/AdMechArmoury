		<label>small Needle</label>
		<ammoTypes>
			<Ammo_OGNeedle>OGI_Bullet_Needler</Ammo_OGNeedle>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="OGNeedleBase" ParentName="AmmoBase" Abstract="True">
		<description>small Needle ammo</description>
		<statBases>
			<Mass>0.01</Mass>
			<Bulk>0.02</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>AmmoOGNeedle</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="OGNeedleBase">
		<defName>Ammo_OGNeedle</defName>
		<label>small Needle</label>
		<graphicData>
			<texPath>Things/Ammo/Neolithic/SlingBullet/Plasteel</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.95</MarketValue>
		</statBases>
		<ammoClass>OGNeedleAC</ammoClass>
	</ThingDef>

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>MakeAmmo_OGNeedle</defName>
		<label>make small Needle x300</label>
		<description>Craft 300 small Needles.</description>
		<jobString>Making small Needles.</jobString>
		<ingredients>
			<li>
				<filter>
				  <thingDefs>
					<li>Plasteel</li>
				  </thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
				  <thingDefs>
					<li>ComponentIndustrial</li>
				  </thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Plasteel</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_OGNeedle>70</Ammo_OGNeedle>
		</products>
		<!-- <researchPrerequisite>WRAutoCannon</researchPrerequisite> -->
	</RecipeDef>

