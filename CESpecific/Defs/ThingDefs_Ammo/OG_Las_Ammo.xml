		<label>make Lascannon cartridge (I) x40</label>
		<description>Craft 40 Lascannon cartridges.</description>
		<jobString>Making Lascannon cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>3</count>
