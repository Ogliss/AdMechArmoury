<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Pirate Faction Expansion: Adds additional Pirate units -->
	<Operation Class="PatchOperationSequence">
	<success>Always</success>
		<operations>		
			<!-- Pirate Faction Expansion: Adds Deamons -->
			<li Class="PatchOperationTest">
				<xpath>/Defs/FactionDef[defName = "Pirate"]</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/FactionDef[defName = "Pirate"]/pawnGroupMakers/li/options</xpath>
					<value>
						  <OG_Mercenary_Heavy>6</OG_Mercenary_Heavy>
						  <OG_Mercenary_Gunner>10</OG_Mercenary_Gunner>
						  <OG_Mercenary_Slasher>3</OG_Mercenary_Slasher>
						  <OG_PirateBoss>5</OG_PirateBoss>
						  <OG_Mercenary_Elite>10</OG_Mercenary_Elite>
						  <OGI_Deserter>10</OGI_Deserter>
						  <OGI_Hiver_Gunner>10</OGI_Hiver_Gunner>
						  <OGI_Hiver_Thrasher>3</OGI_Hiver_Thrasher>
						  <OGI_Hiver_Lowlife>30</OGI_Hiver_Lowlife>
						  <OG_Grenadier_Destructive>2</OG_Grenadier_Destructive>
						  <OG_Mercenary_Sniper>7</OG_Mercenary_Sniper>
					</value>
			</li>	
		</operations>	
	</Operation>
</Patch>
