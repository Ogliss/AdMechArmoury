	<ThingDef ParentName="OGIWargearMakeable">
		<defName>OGI_GrenadePack_Frag</defName>
		<label>frag grenade pack</label>
		<description>a pack of frag grenades.</description>
		<graphicData>
			<texPath>Things/Item/Equipment/GrenadePacks/Imperial/ImpFragGrenades</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		
		<statBases>
			<MarketValue>1500</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>25000</WorkToMake>
			<Mass>1.2</Mass>
		</statBases>
		<equippedStatOffsets>
		
		</equippedStatOffsets>
		<costList>
			<Steel>40</Steel>
			<Plasteel>4</Plasteel>
		</costList>
		<recipeMaker>
		<researchPrerequisite>OG_Weapons_Special_Imperial</researchPrerequisite>
		</recipeMaker>
    <tickerType>Normal</tickerType>
		<comps>  
		
			<li Class="AbilityUser.CompProperties_AbilityItem">
				<!-- <AbilityUserClass>AbilityUser.GenericCompAbilityItem</AbilityUserClass> -->
				<Abilities>
					<li>OGI_Ability_ThrowFrag</li>
				</Abilities>
			</li>
		</comps>
		
		<apparel>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<bodyPartGroups>
				<li>Waist</li>
			</bodyPartGroups>
			<layers>
				<li>BeltWargear3</li>
			</layers>
			<tags>
				<li>OGIWargear</li>
				<li>OGIGrens</li>
				<li>OGIGrenFrag</li>
			</tags>
		</apparel>
		<thingCategories>
			<li>OGIGrens</li>
		</thingCategories>
		<tradeTags>
			<li>OGIWargear</li>
			<li>OGIGrens</li>
		</tradeTags>
	</ThingDef>
	
