<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>OG_Apparel_Cloak</defName>
		<label>cloak</label>
		
		<!--
    <modExtensions>
      <li Class="AdeptusMechanicus.VisibleAccessoryDefExtension">
        <order>1</order>
        <northtop>false</northtop>
