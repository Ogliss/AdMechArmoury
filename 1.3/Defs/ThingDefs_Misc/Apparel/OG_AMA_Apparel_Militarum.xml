	<!-- ========================= Imperial Guard / Astra Militarum - Apparel ========================== -->	
	<!-- ========================= Militarum - Trenchcoat Base ========================== -->
	<ThingDef ParentName="OG_Imperial_Apparel_NoStuffColour" Name="OG_Imperial_Trenchcoat_Base" Abstract="True">
		<description>A long trenchcoat coat for blocking the sun and grit of the outdoors.</description>
		<label>trenchcoat</label>
		<techLevel>Spacer</techLevel>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Duster/Duster</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.05</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>2</Mass>
			<StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.63</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.8925</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<recipeMaker>
			<useIngredientsForColor>false</useIngredientsForColor>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>20</Steel>
		</costList>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Duster/Duster</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>IndustrialAdvanced</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
			</defaultOutfitTags>
		</apparel>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
