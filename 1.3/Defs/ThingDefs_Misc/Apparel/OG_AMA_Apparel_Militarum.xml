	<!-- ========================= Imperial Guard - Undershirt ========================== -->
	<ThingDef ParentName="OG_Imperial_Apparel">
		<defName>OGIG_Apparel_UniformShirt</defName>
		<label>imperial undershirt</label>
		<description>A uniform shirt worn by the soldiers of the IG.</description>
		<graphicData>
			<texPath>Things/Item/Apparel/Imperial/IG/IG_Tunic/IG_Tunic_Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<costStuffCount>50</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<WorkToMake>3400</WorkToMake>
			<Mass>0.25</Mass>
			<StuffEffectMultiplierArmor>0.225</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.275</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<generateCommonality>1</generateCommonality>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<wornGraphicPath>Things/Item/Apparel/Imperial/IG/IG_Tunic/IG_Tunic</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<layers>
				<li>OnSkin</li>
			</layers>
			<tags>
				<li>OGIGClothing</li>
				<li>OGIGUniform</li>
			</tags>
			<defaultOutfitTags>
				<li>Any</li>
			</defaultOutfitTags>
		</apparel>
		<comps>
		
		</comps>
	</ThingDef>

	<!-- ========================= Imperial Guard - Commissar Jacket ========================== -->
	<ThingDef ParentName="OG_Imperial_Trenchcoat_Base">
		<defName>OGIG_Apparel_CommissarJacket</defName>
		<description>The official coat of the Imperial Commissars.</description>
		<label>Commissar Jacket</label>
		<graphicData>
			<texPath>Things/Item/Apparel/Imperial/IG/ComJacket/ComJacket</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>15000</WorkToMake>
			<Mass>1.7</Mass>
			<StuffEffectMultiplierArmor>0.33</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.66</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.935</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
			<!--
			<ArmorRating_Blunt>0.03</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.07</ArmorRating_Sharp>
			<ArmorRating_Heat>0.1</ArmorRating_Heat>
			<Insulation_Cold>15</Insulation_Cold>
			<Insulation_Heat>15</Insulation_Heat>
			-->
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.01</MoveSpeed>
			<SocialImpact>0.1</SocialImpact>
			<PainShockThreshold>0.1</PainShockThreshold>
			<MentalBreakThreshold>-0.1</MentalBreakThreshold>
		</equippedStatOffsets>
		<costList>
			<Steel>10</Steel>
			<Gold>5</Gold>
			<Plasteel>10</Plasteel>
		</costList>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<wornGraphicPath>Things/Item/Apparel/Imperial/IG/ComJacket/ComJacket</wornGraphicPath>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>OGIGHeadgear</li>
				<li>OGImperialGuard</li>
				<li>OGIGCommissar</li>
				<li>OGIGCommissarJacket</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<only>RGBA(1.00,1.00,1.00,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

