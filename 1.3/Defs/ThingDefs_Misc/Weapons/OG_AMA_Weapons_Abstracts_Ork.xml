	<ThingDef Name="OG_Ork_Gun_Base" ParentName="OG_Gun_Qaulity_Art" Abstract="True">
		<thingCategories>
			<li>OGORanged</li>
		</thingCategories>
		<weaponTags>
			<li>OrkRanged</li>
			<li>OrkWeapon</li>
		</weaponTags>
		<equippedStatOffsets>
