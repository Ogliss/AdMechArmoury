	<!-- ==================== Mod - Base Kroot Melee Weapon Template ========================= -->
	<ThingDef Name="OG_Kroot_MeleeWeapon_Base" ParentName="OG_Weapon_Base" Abstract="True">
		<techLevel>Industrial</techLevel>
		<smeltable>true</smeltable>
		<thingCategories>
			<li>OGKMelee</li>
		</thingCategories>
		<weaponTags>
			<li>OGKMelee</li>
			<li>KrootMelee</li>
			<li>KrootWeapon</li>
		</weaponTags>
		<inspectorTabs>
			<li>ITab_Art</li>
		</inspectorTabs>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Art">
				<nameMaker>NamerArtWeaponMelee</nameMaker>
				<descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
				<minQualityForArtistic>Excellent</minQualityForArtistic>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Name="OG_Kroot_MeleeWeapon_Makeable" ParentName="OG_Kroot_MeleeWeapon_Base" Abstract="True">
