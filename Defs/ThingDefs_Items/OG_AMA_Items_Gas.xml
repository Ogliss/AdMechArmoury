<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Gas -->
	<ThingDef ParentName="BaseGas">
		<defName>AcidGas</defName>
		<label>corrosive gas</label>
		<graphicData>
			<texPath>Things/Gas/Puff</texPath>
			<drawSize>2.5</drawSize>
			<color>(0.5,0.8,0.3,0.6)</color>
		</graphicData>
		<!--tickerType>Rare</tickerType-->
		<thingClass>AdeptusMechanicus.AcidicGas</thingClass>
		<gas Class="AdeptusMechanicus.AdeptusGasProperties">
			<blockTurretTracking>true</blockTurretTracking>
			<accuracyPenalty>0.4</accuracyPenalty>
			<rotationSpeed>10</rotationSpeed>
			<expireSeconds>
				<min>50</min>
				<max>60</max>
			</expireSeconds>
		</gas>
	</ThingDef>
			
	<ThingDef ParentName="BaseGas">
		<defName>ToxicGas</defName>
		<label>toxic gas</label>
		<graphicData>
			<texPath>Things/Gas/Puff</texPath>
			<drawSize>2.5</drawSize>
			<color>(0.1,0.8,0.5,0.4)</color>
		</graphicData>
		<!--tickerType>Rare</tickerType-->
		<thingClass>AdeptusMechanicus.EffectGas</thingClass>
		<gas Class="AdeptusMechanicus.AdeptusGasProperties">
			<addHediff>ToxicGas</addHediff>
			<hediffAddChance>1.0</hediffAddChance>
			<hediffSeverity>0.11</hediffSeverity>
			<onlyAffectLungs>true</onlyAffectLungs> 
			<blockTurretTracking>true</blockTurretTracking>
			<accuracyPenalty>0.4</accuracyPenalty>
			<rotationSpeed>10</rotationSpeed>
			<expireSeconds>
				<min>50</min>
				<max>60</max>
			</expireSeconds>
		</gas>
	</ThingDef>
  
